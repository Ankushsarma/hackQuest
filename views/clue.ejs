<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clues</title>
    <style>
        body {
            background-color: #0A0A23;
            color: white;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }
        h1 {
            color: #1E90FF;
        }
        .mystyle {
            display: none;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar'); %>
    <h1>Clues</h1>
    <h1 id="clue0">Clue 0</h1>
    <h1 id="clue1" class="mystyle">Clue 1</h1>
    <h1 id="clue2" class="mystyle">Clue 2</h1>
    <h1 id="clue3" class="mystyle">Clue 3</h1>
    <h1 id="clue4" class="mystyle">Clue 4</h1>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var answer1 = "<%= answer1 %>";
            var answer2 = "<%= answer2 %>";
            var answer3 = "<%= answer3 %>";
            var answer4 = "<%= answer4 %>";
            if (answer1 === 'ankush') {
                document.getElementById("clue1").classList.remove("mystyle");
            }
            if (answer2 === 'kumar') {
                document.getElementById("clue2").classList.remove("mystyle");
            }
            if (answer3 === 'sharma') {
                document.getElementById("clue3").classList.remove("mystyle");
            }
            if (answer4 === 'sarkar') {
                document.getElementById("clue4").classList.remove("mystyle");
            }
        });
    </script>
</body>
</html>